<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View


        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@drawable/system_bar"
        android:clipToPadding="true"
        android:fitsSystemWindows="true">

    </View>

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#1893fb"
        android:gravity="center"

        android:orientation="horizontal"

        >

        <ImageView


            android:id="@+id/searching_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:padding="5dp"

            android:src="@mipmap/toleft" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/searching_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/edittext_bg_white"
                android:gravity="center_vertical"
                android:hint="输入关键词..."
                android:imeOptions="actionSearch"


                android:maxLines="1"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"


                android:paddingTop="4dp"
                android:textColorHint="@color/gray"


                android:textSize="16sp"

                />

            <ImageView

                android:id="@+id/searching_cancel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:src="@drawable/cancel"
                android:visibility="gone"


                />

        </FrameLayout>


        <ImageView

            android:id="@+id/searching_button"
            android:layout_width="30dp"
            android:layout_height="30dp"


            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"

            android:padding="2dp"
            android:src="@drawable/selector_find"
            />


    </LinearLayout>

<MyView.NoScrollViewPager
  android:id="@+id/searching_viewpager"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</MyView.NoScrollViewPager>
</LinearLayout>




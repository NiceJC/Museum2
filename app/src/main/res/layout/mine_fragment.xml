            android:text="个人中心"
            android:textColor="#ffffff"
            android:textSize="18sp"

            />

        <ImageView

            android:id="@+id/to_setup"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:padding="6dp"
            android:src="@drawable/selector_setup" />


    </LinearLayout>

